<Application x:Class="ShopPyaterochka.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ShopPyaterochka"
             StartupUri="ShopWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#FF553026"/>
            <Setter Property="Background" Value="#FFCFC2"/>
            <Setter Property="BorderBrush" Value="#AD7261"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#FF553026"/>
            <Setter Property="Background" Value="#FAB7A4"/>
            <Setter Property="BorderBrush" Value="#AD7261"/>
        </Style>
        <Style TargetType="Grid" >
            <Setter Property="Background" Value="#FFCFC2"/>
        </Style>
        <Style TargetType="ListView">
            <Setter Property="Background" Value="#FFCFC2"/>
            <Setter Property="Foreground" Value="#FF553026"/>
        </Style>
    </Application.Resources>
</Application>
